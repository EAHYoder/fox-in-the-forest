{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "build",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es6",
    "module": "CommonJS",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "."
  },
  "include": ["server/**/*.ts", "models/**/*.ts"],
  "exclude": ["node_modules", "tmp"]
}
